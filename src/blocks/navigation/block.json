{
	"apiVersion": 2,
	"name": "phenix/navigation",
	"version": "0.1.0",
	"title": "Phenix Menu",
	"category": "design",
	"description": "",
	"supports": {
		"html": false,
        "align": ["full"],
        "alignWide": true
	},
    "attributes" : {
		"preview" : {
			"type": "boolean",
			"default": false
		},
		
        "tagName" : {
            "type": "string",
            "default": "nav"
        },

        "menu_id" : {
            "type": "string",
            "default": ""
        },

        "className" : {
            "type": "string",
            "default": ""
        },

        "arrow_icon" : {
            "type": "string",
            "default": "far fa-angle-down"
        },

        "responsive" : {
            "type": "boolean",
            "default": false
        },

        "mobile_mode" : {
            "type": "string",
            "default": "dropdown"
        },

        "effect" : {
            "type": "string",
            "default": "slide"
        },

        "direction" : {
            "type": "string",
            "default": "vertical"
        },

        "hover" : {
            "type": "boolean",
            "default": false
        },
        
        "typography": {
            "type": "object",
            "default": {}
        },

        "style": {
            "type": "object",
            "default": {}
        },

        "responsive_ops": {
            "type": "object",
            "default": {}
        }
    },
	"example": {
        "attributes": {
            "preview": true
        }
    },
	"textdomain": "phenix",
	"editorScript": "px-navigation"
}