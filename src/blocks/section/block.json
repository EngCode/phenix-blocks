{
    "apiVersion": 2,
	"name": "phenix/section",
	"version": "0.1.0",
	"title": "PDS Section",
    "keywords": ["pds", "phenix", "section", "group", "wrapper", "container"],
	"category": "design",
	"description": "Section and Container to Group the Elements Tegother from Phenix Blocks.",
	"supports": {
		"html": false
	},
    "attributes" : {
		"tagName": {
			"type": "string",
			"default": "div"
		},

        "preview" : {
            "type": "boolean",
            "default": false
        },

        "container" : {
            "type": "boolean",
            "default": true
        },

        "container_flex" : {
            "type": "boolean",
            "default": false
        },

        "flex_align" : {
            "type": "string",
            "default": ""
        },

        "size" : {
            "type": "string",
            "default": "container"
        },

        "px_bg_type" : {
            "type" : "string",
            "default" : "color"
        },

        "px_bg_rotate" : {
            "type" : "string",
            "default" : ""
        },

        "px_bg" : {
            "type" : "string",
            "default" : ""
        },

        "px_color" : {
            "type" : "string",
            "default" : ""
        }
    },
    "example": {
        "attributes": {
            "preview": true
        }
    },
	"textdomain": "phenix",
	"editorScript": "file:./index.js"
}