{
	"apiVersion": 2,
	"name": "phenix/taxonomies",
	"version": "0.1.0",
	"title": "Taxonomies",
	"category": "design",
	"description": "Custom Taxonomies & Categories Query Block.",
	"supports": {
		"html": false,
        "align": ["full"],
        "alignWide": true,
        "__experimentalOnEnter": true,
		"__experimentalMetadata": true,
		"shadow": true,
        "renaming": true,
        "interactivity": {"clientNavigation": true}
	},

    "attributes" : {
        "metadata": {
            "name": {
                "type": "string",
                "default": ""
            }
        },
		"query": {
			"type": "object",
            "default": {}
		},

        "template_part": {
            "type": "string",
            "default": "_placeholder"
        },

		"isFlexbox" : {
            "type": "boolean",
            "default": false
        },

        "flexbox": {
            "type": "object",
            "default": {}
        },

        "typography": {
            "type": "object",
            "default": {}
        },

        "style": {
            "type": "object",
            "default": {}
        },

        "responsive": {
            "type": "object",
            "default": {}
        },

        "slider" : {
            "type": "object",
            "default": {}
        },

		"preview" : {
			"type": "boolean",
			"default": false
		}
    },
	"example": {
        "attributes": {
            "preview": true
        }
    },
	"textdomain": "pds-blocks",
	"editorScript": "pds-taxonomies"
}